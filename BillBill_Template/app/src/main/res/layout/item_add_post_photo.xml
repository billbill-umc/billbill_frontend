<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/post_add_photo_item_iv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginHorizontal="8dp"
        android:src="@drawable/background_radius_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/post_add_photo_item_delete_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_post_add_delete"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end|top"
        app:layout_constraintTop_toTopOf="@id/post_add_photo_item_iv"
        app:layout_constraintEnd_toEndOf="@id/post_add_photo_item_iv"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
