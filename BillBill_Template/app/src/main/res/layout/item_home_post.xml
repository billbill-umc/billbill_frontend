<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_post_photo_iv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/background_radius_5dp"
        android:clipToOutline="true"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
<!--    <ImageView-->
<!--        android:id="@+id/home_post_photo_iv"-->
<!--        android:layout_width="96dp"-->
<!--        android:layout_height="96dp"-->
<!--        android:layout_marginBottom="16dp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        android:src="@drawable/img_test_home_list_photo"/>-->

    <TextView
        android:id="@+id/home_post_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:text="상품명"
        android:textSize="16dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/home_post_photo_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_post_cost_tv"
        />

    <TextView
        android:id="@+id/home_post_cost_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="24dp"
        android:text="10,000원"
        android:textSize="14dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/home_post_title_tv"
        app:layout_constraintTop_toBottomOf="@id/home_post_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/home_post_condition_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:text="상태: ?"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/home_post_cost_tv"
        app:layout_constraintTop_toTopOf="@id/home_post_cost_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_post_cost_tv"/>

    <TextView
        android:id="@+id/home_post_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="유저명"
        android:textSize="12dp"
        android:gravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home_post_photo_iv"
        />

    <ImageView
        android:id="@+id/home_post_user_iv"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/img_test_home_user"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toStartOf="@id/home_post_user_tv"
        app:layout_constraintTop_toTopOf="@id/home_post_user_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_post_user_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>